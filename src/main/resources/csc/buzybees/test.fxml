<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane stylesheets="@testing.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="csc.buzybees.test">
    <children>
        <VBox prefWidth="1200" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
            <children>
                <HBox spacing="10" style="-fx-background-color: #4CAF50; -fx-padding: 10px;">
                    <ImageView fx:id="logo" fitHeight="40" fitWidth="100" />
                    <Button fx:id="homeButton" styleClass="nav-button" text="Home" />
                    <Button fx:id="myInfoButton" styleClass="nav-button" text="My Info" />
                    <Button fx:id="peopleButton" styleClass="nav-button" text="People" />
                    <Button fx:id="hiringButton" styleClass="nav-button" text="Hiring" />
                    <Button fx:id="reportsButton" styleClass="nav-button" text="Reports" />
                    <Button fx:id="filesButton" styleClass="nav-button" text="Files" />
                    <Button fx:id="payrollButton" styleClass="nav-button" text="Payroll" />
                    <TextField fx:id="searchField" promptText="Search..." />
                    <!-- Add icons as needed -->
                    <Region HBox.hgrow="ALWAYS" /> <!-- This will push the remaining items to the right -->
                    <Button fx:id="settingsButton" styleClass="icon-button" />
                    <Button fx:id="helpButton" styleClass="icon-button" />
                    <Button fx:id="notificationsButton" styleClass="icon-button" />
                    <ImageView fx:id="profilePicture" fitHeight="40" fitWidth="40" />
                </HBox>
                <HBox spacing="20" style="-fx-background-color: #388E3C; -fx-padding: 20px;">
                    <Label style="-fx-font-size: 24; -fx-text-fill: white;" text="Home" />
                    <VBox>
                        <ImageView fx:id="profilePic" fitHeight="60" fitWidth="60" />
                        <Label style="-fx-text-fill: white;" text="employee" />
                    </VBox>
                    <!-- Additional components can go here -->
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
